{
	"env": {
		"browser": true,
		"node": true,
		"es6": true
	},
	"extends": "eslint:recommended",
	"parser": "babel-eslint",
	"parserOptions": {
		"sourceType": "module",
	},
	"plugins": ["html"],
	"globals": {
		"Config": true
	},
	"rules": {
		"indent": ["error", "tab", { "SwitchCase": 1 }],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"no-console": ["error", { "allow": ["warn", "error"] }],
		"no-empty": ["error", { "allowEmptyCatch": true }]
	}
}